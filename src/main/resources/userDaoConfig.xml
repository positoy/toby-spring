<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="connectionMaker" class="io.github.positoy.MyConnectionMaker"/>
    <bean id="countingConnectionMaker" class="io.github.positoy.CountingConnectionMaker">
        <property name="connectionMaker" ref="connectionMaker"/>
    </bean>
    <bean id="userDao" class="io.github.positoy.UserDao">
        <property name="connectionMaker" ref="countingConnectionMaker"/>
    </bean>
</beans>